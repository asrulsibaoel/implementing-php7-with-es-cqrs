{
    "name": "zendframework/zend-expressive-skeleton",
    "type": "project",
    "homepage": "https://github.com/zendframework/zend-expressive-skeleton",
    "license": "BSD-3-CLAUSE",
    "authors": [
        {
            "name": "Geert Eltink",
            "homepage": "https://xtreamwayz.com/"
        }
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev",
            "dev-develop": "1.1-dev"
        }
    },
    "require": {
        "php": "^5.5 || ^7.0",
        "roave/security-advisories": "dev-master",
        "zendframework/zend-expressive": "~1.0.0@rc || ^1.0",
        "zendframework/zend-expressive-helpers": "^2.0",
        "zendframework/zend-stdlib": "~2.7",
        "zendframework/zend-expressive-fastroute": "^1.0",
        "zendframework/zend-servicemanager": "^2.7.3 || ^3.0",
        "ocramius/proxy-manager": "^1.0",
        "zendframework/zend-expressive-twigrenderer": "^1.0",
        "mtymek/expressive-config-manager": "^0.3.1",
        "prooph/service-bus": "^5.0",
        "prooph/event-store": "^6.1",
        "nicolopignatelli/valueobjects": "~3.0",
        "prooph/event-sourcing": "^4.0",
        "doctrine/migrations": "^1.4",
        "doctrine/dbal": "^2.5",
        "prooph/event-store-bus-bridge": "^2.0",
        "codegyre/robo": "^0.7.1",
        "sandrokeil/interop-config": "^0.3.1",
        "monolog/monolog": "^1.18",
        "los/loslog": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "^2.3",
        "filp/whoops": "^1.1",
        "prooph/event-store-flywheel-adapter": "^1.0",
        "prooph/event-store-doctrine-adapter": "^3.0",
        "laravel/homestead": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AppTest\\": "test/AppTest/",
            "App\\Migrations\\": "migrations"
        }
    },
    "scripts": {
        "check": [
            "@cs",
            "@test"
        ],
        "cs": "php bin/phpcs",
        "cs-fix": "php bin/phpcbf",
        "serve": "php -S 0.0.0.0:8080 -t public/ public/index.php",
        "test": "php bin/phpunit --coverage-text --coverage-clover ./build/logs/clover.xml"
    },
    "config": {
        "bin-dir": "bin"
    }
}
